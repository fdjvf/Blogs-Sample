@model List<SummaryPostViewModel>
@{
    ViewData["Title"] = "Pending Posts";
}

@if (Model.Count == 0)
{
    <h4>No posts pending for approval :D</h4>
}
else
{
    if (User.IsWriter())
    {
        <h4>Waiting approval for this posts</h4>
    }
    else if (User.IsEditor())
    {
        <h4>Approve the following posts to make them public.</h4>
    }
}

<br />
<vc:summary-posts posts="@Model" edit-action="Pending"></vc:summary-posts>